        </li>
          <li>
            <a href="/couples/<%= current_user.couple.profile_name %>/edit" id="" >Edit Couplify Profile</a>
          </li>
          <% end %>
      <li>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
