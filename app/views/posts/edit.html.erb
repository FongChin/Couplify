<div class="col-xs-6 col-xs-offset-2">
<h2>Edit Post</h2>
<form action="<%= post_url(@post) %>" role="form" id="" enctype="multipart/form-data" method="POST">
  <input type="hidden" name="_method" value="PUT"/>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
  
  <div class="form-group">
    <textarea class="form-control" id=""
            name="post[body]" ><%= @post.body %></textarea>
  </div>
  <div class="form-group text-center" id="">
    <%= image_tag @post.image.url(:medium) %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary" id="submit-couple-edit">Save Changes</button>
  </div>
</form>
</div>